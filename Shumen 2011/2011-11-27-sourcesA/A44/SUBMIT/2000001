#include <stdio.h>

int n, m;

int v[100002], st[100002];

int main ()
{
//    freopen ("submarines.in", "r", stdin);
//    freopen ("submarines.out", "w", stdout);

    scanf ("%d %d", &n, &m);

    int i, j, t, nr, sol;

    for (i = 1; i <= n; i ++)
        scanf ("%d", &v[i]);
    while (m --)
    {
        scanf ("%d", &t);
        if (t)
        {
            v[t] ^= v[t + 1] ^= v[t] ^= v[t + 1];
            continue;
        }
        st[0] = 0;
        st[1] = 0;
        sol = 0;
        for (i = 1; i <= n; i ++)
        {
            nr = 0;
            while (st[0] && st[st[0]] < v[i])
            {
                st[0] --;
                nr ++;
            }
            st[++st[0]] = v[i];
            if (nr > sol)
                sol = nr;
        }
        printf ("%d\n", sol);
    }
    return 0;
}
