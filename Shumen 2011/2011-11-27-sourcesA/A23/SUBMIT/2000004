#include<iostream>
#include <algorithm>
using namespace std;
struct sheep
{
    double x;
    double y;
};
sheep a[1024];
int n,k;
int cmp( sheep s, sheep ss)
{
    if(s.x>ss.x) return 0;
    if(s.x<ss.x) return 1;
    return s.y<ss.y;
}
void read()
{
    cin>>n>>k;
    for(int i=1;i<=n;i++)
    cin>>a[i].x>>a[i].y;
    sort(a+1,a+n+1,cmp);
}
void solve()
{
    double sx=0,sy=0;
    int p=0,t=0,l;
    for(int i=1;i<=n;i++)
    {
        sx+=a[i].x;
        sy+=a[i].y;
        p++;
        if(p==n/k) {
             cout<<(sx/p)+0.00001<<" "<<(sy/p)+0.00001<<endl;
             t++;
             sx=0;
             sy=0;
             p=0;
             }
             if(t==k-1) { l=i+1; break; }
    }
    sx=0;
    sy=0;
    p=0;
    for(int i=l;i<=n;i++)
    {
        sx+=a[i].x;
        sy+=a[i].y;
        p++;
    }
    cout<<(sx/p)+0.00001<<" "<<(sy/p)+0.00001<<endl;
}
int main()
{
    read();
    solve();
    return 0;
}
