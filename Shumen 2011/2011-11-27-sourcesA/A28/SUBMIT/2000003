#include<iostream>
using namespace std;
int n,m;
int a[10000001];


int main()
{
    int i,j,k,l,x,br,ans,pr;
    cin>>n>>m;
    for(i=1;i<=n;i++)
    {
        cin>>a[i];
    }
    for(i=1;i<=m;i++)
    {
        cin>>k;
        if(k!=0)
        {
            x=a[k];
            a[k]=a[k+1];
            a[k+1]=x;     
        }
        else
        {
            br=0;
            pr=3000001;
            ans=0;
            for(j=1;j<=n;j++)
            {
                if(a[j]<pr) { br++; pr=a[j]; }
                else
                {
                    if(br>ans)
                    {
                        ans=br;
                    }
                    br=0;
                    pr=a[j];
                }
            }
            if(br>ans) ans=br;
            cout<<ans<<endl;
        }
    }
}
