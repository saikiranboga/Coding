#include<iostream>
#include<cstdio>
#include<algorithm>
#include<queue>
using namespace std;

int n,m,a[1000001];
priority_queue<int> q;

int main()
{
    int i,ans,res;
    scanf("%d%d",&n,&m);
    for(i=1;i<=n;i++)
     scanf("%d",&a[i]);
    for(;m;m--)
    {
        scanf("%d",&i);
        if(i)swap(a[i],a[i+1]);
        else
        {
            ans=0;
            q.push(-a[1]);
            for(i=2;i<=n;i++)
            {
                res=0;
                if(q.empty())continue;
                while(!q.empty()&&q.top()>-a[i])
                {
                    res++;
                    q.pop();
                }
                q.push(-a[i]);
                if(res>ans)ans=res;
            }
            printf("%d\n",ans);
            while(!q.empty())q.pop();
        }
    }
}
