#include<iostream>
using namespace std;
int n,k,prib;
double a[10000],b[10000];
int main()
{
    
    cin>>n>>k;
    
    prib=n/k;
    int br=0;int ans=0;int krasi=0;
    double x,y;
    
    for(int i=0;i<n;i++)
    {cin>>x>>y;
    br++;
    a[ans]=a[ans]+x;
    b[ans]=b[ans]+y;
            
            if(br==prib){a[ans]=a[ans];b[ans]=b[ans];ans++;br=0;}}
            
    
    
    if(n%k!=0){a[ans-1]=a[ans-1]+a[ans];
               b[ans-1]=b[ans-1]+b[ans];}
               
    for(int i=0;i<k;i++)
    cout<<a[i]/prib<<" "<<b[i]/prib<<"\n";
    

    return 0;
}
