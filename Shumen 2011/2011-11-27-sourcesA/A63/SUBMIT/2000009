#include "iostream"

using namespace std;

int main()
{
    int n, m, c, max=0, z=0, t;
    cin>>n>>m;
    int a[n],sig[n][2], val[n];
    for(int i=0; i<n; i++)
    {
        cin>>a[i];
        sig[i][0]=0;
    }
    for(int j=0; j<n-1; j++)
    {
        for(int k=j+1; k<n; k++)
        {
            if(a[j]<a[k])
            {
                sig[k][0]++;
                sig[j][1]=k;
                if(max<sig[k][0])
                {
                    max=sig[k][0];
                }
                break;
            }
        }
    }
    for(int i=0; i<m; i++)
    {
        cin>>c;
        if(c==0)
        {
            val[z]=max;
            z++;
        }
        else
        {
            if(a[c]>a[c-1] && c!=1)
            {
                sig[c-1][0]+=sig[c][0];
                if(max<sig[c-1][0])
                    max=sig[c-1][0];
                sig[c][0]=0;
            }
            if(a[c]>a[c-1] && c==1)
            {
                sig[sig[1][1]][0]++;
                if(max<sig[sig[1][1]][0])
                    max=sig[sig[1][1]][0];
            }
            if(a[c]<a[c-1] && c!=1)
            {
                t=0;
                for(int j=a[c-2]; j>=a[c-sig[c-1][0]-1]; j--)
                {
                    if(a[j]>=a[c])t++;
                }
                if(sig[c-1][0]!=0)
                    sig[c-1][0]-=t;
                sig[c][0]=t;
                if(max<sig[c][0])
                {
                    max=sig[c][0];
                }
            }
            if(a[c]<a[c-1] && c==1)
            {
                sig[sig[1][1]][0]--;
                sig[1][0]++;
            }
            t=a[c-1];
            a[c-1]=a[c];
            a[c]=t;
        }
    }
    for(int i=0; i<z; i++)
    {
        cout<<val[i]<<endl;
    }
}
