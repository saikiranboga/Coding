#include<cstdio>
#include<algorithm>
#include<cstring>
using namespace std;
int mat[1001][1001],d,ans[1001][1001],tmp[1001];

int main()
{
    int m,n;
    scanf("%d%d",&n,&m);
    for(int i=0;i<n;i++)
    for(int j=0;j<m;j++)
    {
        scanf("%d",&d);
        if(d==1) mat[i][j]=0;
        else {
            if(j==0) mat[i][j]=1;else mat[i][j]=1+mat[i][j-1];
        }
    }
    for(int i=0;i<n;i++)
        for(int j=0;j<m;j++)
        if(mat[i][j]!=0)
        {
            int t=mat[i][j];
            for(int k=i;k>=0;k--)
            {
                if(mat[k][j]<t) t=mat[k][j];
                if(t==0) break;
                if(ans[k][i]<(t*(i-k+1))) ans[k][i]=(t*(i-k+1));
            }
        }
    int q,k;
   // for(int i=0;i<n;i++)
   // {for(int j=0;j<m;j++)
   //  printf("%d ",mat[i][j]);printf("\n");}
    scanf("%d",&q);
    for(int i=0;i<q;i++)
    {
        scanf("%d%d",&d,&k);
        printf("%d\n",ans[d-1][k-1]);
    }


}
