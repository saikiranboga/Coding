#include<cstdio>
#include<queue>
using namespace std;
int n,m,a[1000010],ok[1000010],ma;
priority_queue <int> q;
int main()
{
 int i,i2,z,l=1;
 scanf("%d%d",&n,&m);
 for(i=1;i<=n;i++)scanf("%d",&a[i]);
 if(m<=100)
 {
  for(i=0;i<m;i++)
  {
   scanf("%d",&z);
   if(z)
   {
    i2=a[z+1];
    a[z+1]=a[z];
    a[z]=i2;
    l=1;
   }
   else
   {
    if(l)
    {
     ma=0;
     while(q.empty()==0)q.pop();
     for(i2=1;i2<=n;i2++)
     {
      ok[i2]=0;
      while(q.empty()==0)
      {
       if(q.top()<a[i2])
       {
        q.pop();
        ok[i2]++;
       }
       else break;
      }
      q.push(a[i2]);
      if(ok[i2]>ma)ma=ok[i2];
     }
     l=0;
    }
    printf("%d\n",ma);
   }
  }
 }
 return 0;
}
