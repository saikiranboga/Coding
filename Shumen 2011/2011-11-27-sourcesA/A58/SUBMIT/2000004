#include<cstdio>
#include<algorithm>
using namespace std;
int n,m,a[1000010],ma,ok[1000010],n1;
int main()
{
 int i,i2,z,la=1,l,r;
 scanf("%d%d",&n,&m);
 for(i=1;i<=n;i++)scanf("%d",&a[i]);
 //if(m<=100)
 //{
  for(i=0;i<m;i++)
  {
   scanf("%d",&z);
   if(z)
   {
    swap(a[z],a[z+1]);
    la=1;
   }
   else
   {
    if(la)
    {
     ma=0;
     ok[1]=a[1];
     n1=1;
     for(i2=2;i2<=n;i2++)
      if(a[i2]<ok[n1])ok[++n1]=a[i2];
      else
      {
       l=0;
       r=n1;
       while(l<r-1)
       {
        if(ok[(l+r)/2]>a[i2])l=(l+r)/2;
        else r=(l+r)/2;
       }
       if(n1-r+1>ma)ma=n1-r+1;//printf("%d %d      %d %d %d\n",ma,i2,n1,l,r);}
       ok[r]=a[i2];
       n1=r;
      }
     la=0;
    }
    printf("%d\n",ma);
   }
  }
 //}
 return 0;
}
